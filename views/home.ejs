
<h1>
    Codeial / <%= title %>
</h1>


<section id="feed-posts">
    <% if (locals.user){ %>
    <h4>Post</h4>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3"></textarea>
        <input type="submit" value="Post">
    </form>  
    <% } %> 
    <div id="posts-list-container">
        <ul>
            <% for (let i of Post_list) {%>
                    <!-- <p><%= i.user %></p>
                    <p><%= i.createdAt %></p> -->
                   <li>
                        <p><%= i.content %></p>
                   </li> 
                   <small>
                       <p><%= i.user.name %></p>
                   </small>
                        
            <% } %>
        </ul>
        
    </div>  
           
</section>

